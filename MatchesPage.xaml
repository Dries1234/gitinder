<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="gitinder.MatchesPage" >
    <ScrollView x:Name="RepositoriesList" Margin="20">
        <StackLayout>
            <CollectionView ItemsSource="{Binding repos}" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill"   BackgroundColor="DimGray" VerticalOptions="Center" Margin="0,10" Padding="50">
                            <Label Text="{Binding name}" Padding="0,0,60,0"/>
                            <Label Text="Stars: {Binding stargazerCount}"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>
